extends layout

block content
  h1 #{title}
  form(method='POST', action='/user/add')
    #form-group
        label First Name:
        input.form-control(name='firstName', type='text')
    #form-group
        label Last Name:
        input.form-control(name='lastName', type='text')
    #form-group
        label Email:
        input.form-control(name='email', type='text')
    div.checkbox-inline
        label Are you an Administrator?
        input.checkbox-input(type='checkbox', name=`isAdmin`, value="false")
    input.btn.btn-primary(type='submit', value='Submit')