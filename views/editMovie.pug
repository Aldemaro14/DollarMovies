extends layout

block content
  h1 #{title}
  form(method='POST', action='/movies/edit/'+movie._id)
    #form-group
        label Title:
        input.form-control(name='title', type='text', value=movie.title)
    #form-group
        label Genre:
        input.form-control(name='genre', type='text', value=movie.genre)
    #form-group
        label Body:
        textarea.form-control(name='body', type='text')= movie.body
    input.btn.btn-primary(type='submit', value='Submit')
